<% provide(:title, "Share") %>
<h1>Share your memories and photos</h1>
<p>
	<div class="row">
	  <aside class="col-md-4">
	  	<% if logged_in? %>
		    <section class="user_info">
		      <%= render 'shared/user_info' %>
		    </section>
		    <section class="micropost_form">
		      <%= render 'shared/micropost_form' %>
		    </section>
		<% end %>
	  </aside>
	  <div class="col-md-8">
	    <h3>Memory Feed</h3>
	    <%= render 'shared/feed' %>
	  </div>
	</div>
</p>