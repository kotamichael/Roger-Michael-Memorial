.center.jumbotron {
	background-image: url(<%= asset_path 'west_virginia_mountains.jpg' %>);
	height: 100%;
	width: 100%;
	background-size: cover;
	position: relative;

	h1 {
		font-size: 6em;
	}

	h2 {
		color: #fff;
		font-size: 1.9em;
		letter-spacing: 0.2vw;
	}
}

.bio {
	font-size: 1.35vw;
	letter-spacing: 0.125vw;

	h1 {
		font-size: 10vh;
		margin-top: 4vh;
	}

	.bio-pic {
		float: left;
		height: 350px;
		width: 350px;
		margin-top: 3.5vw;
		margin-right: 4vw;
		margin-bottom: 5vw;
		img {
			border-radius: 6px;
		}
	}
}