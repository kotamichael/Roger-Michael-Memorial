<% provide(:title, "Share") %>
<h1>Share your memories and photos</h1>

<% if logged_in? %>
	<div class="card">
			<aside>
			    <section class="user_info">
			    	<%= render 'shared/user_info' %>
			    </section>
			    <section class="giving_form">
			    	<%= render 'shared/micropost_form' %>
			    </section>
		    </aside>
	</div>
<% end %>

<div class="card">
	<div class="row">
		<aside>
			<h1>Memory Feed</h1>
			<%= render 'shared/feed' %>
		</aside>
	</div>
</div>