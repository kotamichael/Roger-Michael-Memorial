.center.jumbotron {
	background-image: url(<%= asset_path 'west_virginia_mountains.jpg' %>);
	height: 100%;
	width: 100%;
	background-size: cover;
	position: relative;

	h1 {
		font-size: 6em;
	}

	h2 {
		color: #fff;
		font-size: 1.9em;
		letter-spacing: 0.2vw;
	}
}

.bio.jumbotron.p-3.p-md-5.text-white.rounded.bg-dark {
	background-image: linear-gradient(to top right, #b49f9c33, #f7f6fc);
	font-size: 1.35vw;
	letter-spacing: 0.125vw;
	text-align: center;

	h1 {
		margin-top: 4vh;
	}

	.bio-pic {
		margin-top: 3.5vw;
		margin-bottom: 3vw;
		img {
			display: block;
			border-radius: 6px;
		}
	}
	.bio-pic-right {
		margin-top: 3.5vw;
			margin-bottom: 3vw;
			img {
				display: block;
				border-radius: 6px;
		}
	}
}

.wv, .fw {
	margin-left: 3.5vw;
}

@media (min-width: 1199.98px) {
	.bio.jumbotron.p-3.p-md-5.text-white.rounded.bg-dark {
		font-size: 1.35vw;
		letter-spacing: 0.125vw;
		text-align: left;

		h1 {
			margin-top: 4vh;
		}

		.bio-pic {
			float: left;
			margin-right: 2.5vw;
			margin-bottom: 1.1vw;
			img {
				border-radius: 6px;
			}
		}
		.bio-pic-right {
			float: right;
			margin-left: 2.5vw;
			margin-bottom: 1.1vw;
			img {
				border-radius: 6px;
			}
		}
	}
}